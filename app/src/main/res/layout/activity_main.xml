<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/app_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_demo_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_10_dp"
        android:text="@string/tx_demo_activity" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_demo_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_10_dp"
        android:text="@string/tx_demo_fragment" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_demo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_10_dp"
        android:text="@string/tx_demo_list" />

</androidx.appcompat.widget.LinearLayoutCompat>